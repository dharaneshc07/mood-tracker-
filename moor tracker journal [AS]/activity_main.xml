<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/moodImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/happy_emoji"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/moodImageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/normal_emoji"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/moodImageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/sad_emoji"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/moodSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moodImageView"
        android:layout_marginTop="16dp"
        android:entries="@array/moods" />

    <EditText
        android:id="@+id/journalEntryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moodSpinner"
        android:layout_marginTop="16dp"
        android:hint="Enter your journal entry" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/journalEntryEditText"
        android:layout_marginTop="16dp"
        android:text="Save" />

</RelativeLayout>